// Prisma schema for STRK transfer indexer
// Run `npx prisma generate` after editing

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model StrkTransfer {
    id           BigInt   @id @default(autoincrement())
    block_number BigInt
    tx_index     Int
    event_index  Int
    tx_hash      String   @db.VarChar(66)
    timestamp    Int
    from         String   @db.VarChar(66)
    to           String   @db.VarChar(66)
    value        String
    created_at   DateTime @default(now())
    updated_at   DateTime @updatedAt

    @@unique([tx_hash, event_index])
    @@index([block_number])
    @@index([from])
    @@index([to])
    @@index([timestamp])
}
