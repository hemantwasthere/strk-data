// Prisma schema for STRK transfer indexer
// Run `npx prisma generate` after editing

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model strk_transfers {
    block_number Int     @unique
    tx_index     Int
    event_index  Int
    tx_hash      String  @db.VarChar(66)
    timestamp    Int
    from         String  @db.VarChar(66)
    to           String  @db.VarChar(66)
    value        String
    cursor       String? @map("_cursor")
}
